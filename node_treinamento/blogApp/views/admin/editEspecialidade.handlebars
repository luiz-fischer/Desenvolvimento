{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Especialidade: </h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/especialidades/edit" method="POST">
    <input type="hidden" name="id" value="{{especialidade._id}}">
      <label for="nome">Nome Da Especialidade:</label>
      <input
        type="text"
        id="nome"
        name="nome"
        class="form-control"
        placeholder="Nome da especialidade"
        value="{{especialidade.nome}}"
      />
      <label for="descricao">Breve Descrição:</label>
      <input
        type="text"
        id="descricao"
        name="descricao"
        class="form-control"
        placeholder="Breve descrição da especialidade"
        value="{{especialidade.descricao}}"
      />
      <button type="submit" class="btn btn-success mt-4">Editar Especialidade</button>
    </form>
  </div>
</div>