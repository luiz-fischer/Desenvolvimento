{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar Medico: </h4>
    <form action="/admin/medico/edit" method="POST">
      <label for="nome">Nome:</label>
        <input type="text" name="nome" class="form-control" value="{{medico.nome}}"  required>
        <input type="hidden" name="id" value="{{medico._id}}">
      <label for="sobrenome">Sobrenome:</label>
        <input type="text" name="sobrenome" class="form-control" value="{{medico.sobrenome}}" required>
      <label for="crm">CRM:</label>
        <input type="number" name="crm" class="form-control" value="{{medico.crm}}" required>
      <label for="telefone">Telefone:</label>
        <input type="number" name="telefone" class="form-control" value="{{medico.telefone}}" required>

      <label for="especialidade">Especialidade:</label>
      <select name="especialidade" class="form-select">
          {{#each especialidades}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma Especialidade registrada</option>
          {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Editar Medico</button>
    </form>
  </div>
</div>